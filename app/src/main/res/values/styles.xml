<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/blackBackgroundText</item>
        <item name="actionButtonStyle">@style/defbtn</item>
        <item name="android:windowBackground">@color/whiteBackgroundText</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:windowBackground">@color/blackBackgroundText</item>
        <item name="colorError">@color/whiteBackgroundText</item>
        <item name="android:textViewStyle">@style/reverseColors</item>
        <item name="actionButtonStyle">@style/defbtn.dark</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:itemBackground">@color/blackBackgroundText</item>
        <item name="android:textColorSecondary">@color/whiteBackgroundText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="imageview">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="reverseColors">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/whiteBackgroundText</item>
    </style>

    <style name="defbtn.dark">
        <item name="android:textColor">@color/blackBackgroundText</item>
    </style>

    <style name="defbtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center|clip_vertical</item>
        <item name="android:background">@drawable/test_btn_shape</item>
        <item name="android:textColor">@color/whiteBackgroundText</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
